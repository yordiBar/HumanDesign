@model HumanDesign.Models.Center

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Center</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <style>
        .details-table {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

            .details-table th, .details-table td {
                border: 1px solid #dee2e6;
                padding: 0.75rem;
                vertical-align: top;
                line-height: 1.6;
                text-align: left;
            }

            .details-table th {
                width: 20%;
                background-color: #f8f9fa;
                font-weight: bold;
            }
    </style>

    <h4>Center</h4>
    <hr />
    <table class="table details-table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>Key Note</td>
                <td>@Html.DisplayFor(model => model.KeyNote)</td>
            </tr>
            <tr>
                <td>Defined</td>
                <td>@Html.DisplayFor(model => model.Defined)</td>
            </tr>
            <tr>
                <td>Undefined</td>
                <td>@Html.DisplayFor(model => model.Undefined)</td>
            </tr>
            <tr>
                <td>Tips for Defined</td>
                <td>@Html.DisplayFor(model => model.TipsDefined)</td>
            </tr>
            <tr>
                <td>Tips for Undefined</td>
                <td>@Html.DisplayFor(model => model.TipsUndefined)</td>
            </tr>
        </tbody>
    </table>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex align-items-center" style="margin-top: 10px;">
            <div class="form-group me-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>
