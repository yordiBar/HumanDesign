@model HumanDesign.Models.CognitionVariable

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <style>
        .details-table {
            width: 100%;
            border-collapse: collapse; /* Ensures borders between rows and columns touch */
            table-layout: fixed; /* Helps to keep columns width consistent */
        }

            .details-table th, .details-table td {
                border: 1px solid #dee2e6; /* Adds borders to cells */
                padding: 0.75rem; /* Adds some padding for text inside cells */
                vertical-align: top; /* Aligns content to the top of the cell */
                line-height: 1.6; /* Adjusts the line height to match the other tables */
                text-align: left; /* Aligns text to the left */
            }

            .details-table th {
                width: 20%; /* Sets the width of the 'Feature' column to match the other tables */
                background-color: #f8f9fa; /* Matches the background color from the other tables */
                font-weight: bold; /* Makes the 'Feature' header bold */
            }
    </style>

    <hr />
    <table class="table details-table">
        <tbody>
            <tr>
                <td>Name</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <td>Note</td>
                <td>@Html.DisplayFor(model => model.Note)</td>
            </tr>
            <tr>
                <td>Tips</td>
                <td>@Html.DisplayFor(model => model.Tips)</td>
            </tr>
        </tbody>
    </table>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex align-items-center" style="margin-top: 10px;">
            <div class="form-group me-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>
