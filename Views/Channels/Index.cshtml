@model IEnumerable<HumanDesign.Models.Channel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all Channels</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Circuit)
                </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th style="border-right: 1px solid #ddd;">
                @Html.DisplayNameFor(model => model.Note)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Circuit.Name)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td style="border-right: 1px solid #ddd;">
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success me-2">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning me-2">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
