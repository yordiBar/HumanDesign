@model IEnumerable<HumanDesign.Models.Gate>

@{
    ViewData["Title"] = "Index";
}

<h2>List of all Gates</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
@if (Model.Any())
{
    <table class="table" style="border-collapse: collapse;">
        <thead>
            <tr>
                <th style ="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Circuit)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Shadow)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Repressive)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Reactive)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Gift)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Siddhi)
                </th>
                <th style="border-right: 1px solid #ddd;">
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Location.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Circuit.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Shadow.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Repressive.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Reactive.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Gift.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Siddhi.Name)</td>
                    <td style="border-right: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="form-group me-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                            </div>
                            <div class="form-group me-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No gates available.</p>
}

