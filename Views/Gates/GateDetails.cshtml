@model HumanDesign.Models.Gate

@{
    ViewData["Title"] = "Gate Details";
}

<h1>Gate Details</h1>

@if (Model != null)
{
    <style>
        .details-table {
            width: 100%;
            border-collapse: collapse; /* Ensures borders between rows and columns touch */
            table-layout: fixed; /* Helps to keep columns width consistent */
        }

            .details-table th, .details-table td {
                border: 1px solid #dee2e6; /* Adds borders to cells */
                padding: 0.75rem; /* Adds some padding for text inside cells */
                vertical-align: top; /* Aligns content to the top of the cell */
                line-height: 1.6; /* Adjusts the line height to match the 'Gate' table */
                text-align: left; /* Aligns text to the left */
            }

            .details-table th {
                width: 20%; /* Sets the width of the 'Features' column to match the 'Gate' table */
                background-color: #f8f9fa; /* Matches the background color from the 'Gate' table */
                font-weight: bold; /* Makes the 'Features' header bold */
            }
    </style>

    <table class="table details-table">
        <thead>
            <tr>
                <th scope="col">Feature</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Gate Name</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Description)</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <td>Location</td>
                <td>@Html.DisplayFor(model => model.Location.Name)</td>
            </tr>
            <tr>
                <td>Circuit</td>
                <td>@Html.DisplayFor(model => model.Circuit.Name)</td>
            </tr>
            <tr>
                <td>Shadow</td>
                <td>@Html.DisplayFor(model => model.Shadow.Name)</td>
            </tr>
            <tr>
                <td>Repressive</td>
                <td>@Html.DisplayFor(model => model.Repressive.Name)</td>
            </tr>
            <tr>
                <td>Reactive</td>
                <td>@Html.DisplayFor(model => model.Reactive.Name)</td>
            </tr>
            <tr>
                <td>Gift</td>
                <td>@Html.DisplayFor(model => model.Gift.Name)</td>
            </tr>
            <tr>
                <td>Siddhi</td>
                <td>@Html.DisplayFor(model => model.Siddhi.Name)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Notes)</td>
                <td>@Html.DisplayFor(model => model.Notes)</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
    else
    {
        <div>
            <p>Gate not found.</p>
        </div>
    }
